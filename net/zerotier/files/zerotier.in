#!/bin/sh

# $FreeBSD: head/net/zerotier/files/zerotier.in 470435 2018-05-19 22:19:54Z dch $
#
# PROVIDE: zerotier
# REQUIRE: FILESYSTEMS netif
# BEFORE:  pf ipfw ipfilter
# KEYWORD: shutdown
#
# Add these lines to /etc/rc.conf.local or /etc/rc.conf
# to enable this service:
#
# zerotier_enable (bool):	Set to NO by default.
#				Set it to YES to enable zerotier.

. /etc/rc.subr

name=zerotier
rcvar=zerotier_enable

load_rc_config $name

: ${zerotier_enable:="NO"}

command=%%PREFIX%%/sbin/${name}-one

command_args="-d"

run_rc_command "$1"
