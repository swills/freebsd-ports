#!/bin/sh

#
# $FreeBSD: head/sysutils/pfstat/files/pfstatd.in 453077 2017-10-28 17:56:01Z olgeni $
#

# PROVIDE: pfstatd
# REQUIRE: DAEMON
# KEYWORD: shutdown

#
# Add the following lines to /etc/rc.conf to enable pfstatd:
# pfstatd_enable (bool):      Set to "NO" by default.
#                             Set it to "YES" to enable pfstatd
. /etc/rc.subr

name="pfstatd"
rcvar=pfstatd_enable
command="%%PREFIX%%/bin/${name}"

load_rc_config ${name}

: ${pfstatd_enable:="NO"}

run_rc_command "$1"
