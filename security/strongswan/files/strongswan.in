#!/bin/sh
# Start or stop strongswan
# $FreeBSD: head/security/strongswan/files/strongswan.in 481110 2018-10-02 10:58:37Z garga $

# PROVIDE: strongswan
# REQUIRE: DAEMON
# BEFORE: LOGIN
# KEYWORD: shutdown

. /etc/rc.subr

name=strongswan
rcvar=strongswan_enable

extra_commands="reload statusall"

load_rc_config $name

command="%%PREFIX%%/sbin/ipsec"

start_precmd="strongswan_precmd"
stop_cmd="strongswan_cmd"
status_cmd="strongswan_cmd"
reload_cmd="strongswan_cmd"
statusall_cmd="strongswan_cmd"

strongswan_precmd()
{
	command_args=${rc_arg}
}

strongswan_cmd()
{
	${command} ${rc_arg}
}

run_rc_command "$1"
